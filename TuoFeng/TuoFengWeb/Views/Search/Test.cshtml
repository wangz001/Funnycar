    <script src="@Url.Content("//g.alicdn.com/msui/sm/0.5.8/js/sm-extend.js")" type="text/javascript"> </script>*@
    <!--angularJs-->
    <script src="@Url.Content("~/Scripts/AngularJs/angular.js")" type="text/javascript"> </script>

    <script type="text/javascript">
        var funnycarApp = angular.module('phonecatAppa', []);
        funnycarApp.controller('PhoneListCtrl', function ($scope) {
            $scope.phones = [
                {
                    'id': '1',
                    'name': '苹果',
                    'snippet': 'Fast just got faster with Nexus S.'
                },
                {
                    'id': '2',
                    'name': '三星',
                    'snippet': 'The Next, Next Generation tablet.'
                },
                {
                    'id': '3',
                    'name': 'MOTOROLA XOOM™',
                    'snippet': 'The Next, Next Generation tablet.'
                }
            ];
        });
    </script>
</head>
<body>
    <div class="page">
        <header class="bar bar-nav">
            <a class="icon icon-left pull-left open-panel" href="/Travels"></a>
            <span class="title">路由</span>
        </header>
        <div class="content">
            Your name: <input type="text" ng-model="yourname" placeholder="World">
            <hr>
            Hello {{yourname || 'World'}}!
            <div ng-controller="PhoneListCtrl">

                    <ul ng-repeat="phone in phones|filter:yourname">
                        <li>{{phone.name}}
                <p>{{phone.snippet}}</p>
                        </li>
                    </ul>

            </div>
        </div>
    </div>
</body>
</html>
