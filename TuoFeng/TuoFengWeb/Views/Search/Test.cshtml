<html ng-app="phonecatAppa">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    @*<link href="@Url.Content("//g.alicdn.com/msui/sm/0.5.8/css/sm.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("//g.alicdn.com/msui/sm/0.5.8/css/sm-extend.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("//g.alicdn.com/sj/lib/zepto/zepto.js")" type="text/javascript"></script>
