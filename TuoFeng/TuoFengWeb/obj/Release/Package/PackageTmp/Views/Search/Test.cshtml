@{
    ViewBag.Title = "Test";
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>SUI Mobile Demo</title>
    <meta name="description" content="MSUI: Build mobile apps with simple HTML, CSS, and JS components.">
    <meta name="author" content="阿里巴巴国际UED前端">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <link rel="shortcut icon" href="/favicon.ico">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <!-- Google Web Fonts -->

    <link href="@Url.Content("//g.alicdn.com/msui/sm/0.5.8/css/sm.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("//g.alicdn.com/msui/sm/0.5.8/css/sm-extend.css")" rel="stylesheet" type="text/css" />

    <link rel="apple-touch-icon-precomposed" href="/assets/img/apple-touch-icon-114x114.png">
    <script src="@Url.Content("//g.alicdn.com/sj/lib/zepto/zepto.js")" type="text/javascript"></script>
    <script>
        var _hmt = _hmt || [];
        (function () {
            var hm = document.createElement("script");
            hm.src = "//hm.baidu.com/hm.js?ba76f8230db5f616edc89ce066670710";
            var s = document.getElementsByTagName("script")[0];
            s.parentNode.insertBefore(hm, s);
        })();
    </script>

</head>
<body>
    <div class="page">
        <header class="bar bar-nav">
            <h1 class='title'>picker</h1>
        </header>
        <div class="content">
            <div class="content-block-title">单个选择</div>
            <div class="content-block">
                <div class="list-block">
                    <ul>
                        <!-- Text inputs -->
                        <li>
                            <div class="item-content">
                                <div class="item-inner">
                                    <div class="item-title label">手机</div>
                                    <div class="item-input">
                                        <input type="text" placeholder="选择手机" id='picker' />
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="content-block-title">多列选择</div>
            <div class="content-block">
                <div class="list-block">
                    <ul>
                        <!-- Text inputs -->
                        <li>
                            <div class="item-content">
                                <div class="item-inner">
                                    <div class="item-title label">称呼</div>
                                    <div class="item-input">
                                        <input type="text" placeholder="选择称呼" id='picker-name' value="钱 明 小姐" />
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

<script type="text/javascript">
    $(function () {
        $(document).on("pageInit", function () {
            $("#picker").picker({
                toolbarTemplate: '<header class="bar bar-nav">\
      <button class="button button-link pull-right close-picker">确定</button>\
      <h1 class="title">请选择你的手机</h1>\
      </header>',
                cols: [
                  {
                      textAlign: 'center',
                      values: ['iPhone 4', 'iPhone 4S', 'iPhone 5', 'iPhone 5S', 'iPhone 6', 'iPhone 6 Plus', 'iPad 2', 'iPad Retina', 'iPad Air', 'iPad mini', 'iPad mini 2', 'iPad mini 3']
                  }
                ]
            });
            $("#picker-name").picker({
                toolbarTemplate: '<header class="bar bar-nav">\
      <button class="button button-link pull-right close-picker">确定</button>\
      <h1 class="title">请选择称呼</h1>\
      </header>',
                cols: [
                  {
                      textAlign: 'center',
                      values: ['赵', '钱', '孙', '李', '周', '吴', '郑', '王']
                  },
                  {
                      textAlign: 'center',
                      values: ['杰伦', '磊', '明', '小鹏', '燕姿', '菲菲', 'Baby']
                  },
                  {
                      textAlign: 'center',
                      values: ['先生', '小姐']
                  }
                ]
            });
            $("#datetime-picker").datetimePicker({
                value: ['1985', '12', '04', '9', '34']
            });
            $("#city-picker").cityPicker({
                toolbarTemplate: '<header class="bar bar-nav">\
      <button class="button button-link pull-right close-picker">确定</button>\
      <h1 class="title">选择收货地址</h1>\
      </header>'
            });
        });
        $.init();
    });
</script>

    <script src="@Url.Content("//g.alicdn.com/msui/sm/0.5.8/js/sm.js")" type="text/javascript"></script>
    <script src="@Url.Content("//g.alicdn.com/msui/sm/0.5.8/js/sm-extend.js")" type="text/javascript"> </script>
</body>
</html>

